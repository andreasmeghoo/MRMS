@page
@using MRMS.Models;
@model MRMS.Pages.BloodTests.DeleteModel

@{
    ViewData["Title"] = "Cancel Blood Test Order";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to cancel this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTest.ConsultationId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BloodTest.ConsultationId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTest.Comments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BloodTest.Comments)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTest.PerformedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BloodTest.PerformedDate)
        </dd>
        @{
            User bloodTestStaff = Model.Staff.FirstOrDefault(d => d.Id == Model.BloodTest.PerformedById);
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BloodTest.PerformedById)
        </dt>
        <dd class="col-sm-10">
            @bloodTestStaff.FirstName @bloodTestStaff.LastName
        </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="BloodTest.BloodTestId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
