@page
@model MRMS.Pages.BloodTests.ResultsModel

@{
    ViewData["Title"] = "Blood Test Results";
}

<h1>@ViewData["Title"]</h1>
@if (User.IsInRole("patient"))
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.redBloodCellCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.redBloodCellCount) million cells/μL
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.whiteBloodCellCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.whiteBloodCellCount) thousand cells/μL
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.plateletCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.plateletCount) thousand platelets/μL
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.glucoseLevel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.glucoseLevel) mg/dL
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.cholestorolLevel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.cholestorolLevel) mg/dL
            </dd>
            <dt class="col-sm-2">
                ALT (Liver Function)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.liverFunction) U/L
            </dd>
            <dt class="col-sm-2">
                Creatinine (Kidney Function)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.kidneyFunction) mg/dL
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Index">Back to Past Blood Tests</a>
    </div>

}
else
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.BloodTestId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.BloodTestId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.redBloodCellCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.redBloodCellCount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.whiteBloodCellCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.whiteBloodCellCount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.plateletCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.plateletCount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.glucoseLevel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.glucoseLevel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.cholestorolLevel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.cholestorolLevel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.liverFunction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.liverFunction)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodTestResult.kidneyFunction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodTestResult.kidneyFunction)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

}
