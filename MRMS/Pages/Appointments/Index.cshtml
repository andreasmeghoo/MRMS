@page
@model MRMS.Pages.Appointments.IndexModel

@{
    ViewData["Title"] = "Appointments";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">New Appointment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].PreferredDoctorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].SpecialAccomodations)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Appointment)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PreferredDoctorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialAccomodations)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.AppointmentId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.AppointmentId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.AppointmentId">Delete</a>
                    @if (User.IsInRole("admin"))
                    {
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                @{
                                    var currentStatusName = ((System.ComponentModel.DataAnnotations.DisplayAttribute)typeof(Enums.AppointmentStatus)
                                    .GetMember(item.Status.ToString())[0]
                                    .GetCustomAttributes(typeof(System.ComponentModel.DataAnnotations.DisplayAttribute), false)[0])
                                    .Name;
                                }
                                @currentStatusName
                            </button>
                            <ul class="dropdown-menu">
                                @foreach(var appointmentStatus in Enums.AppointmentStatus.GetValues(typeof(Enums.AppointmentStatus)))
                                {
                                    var optionName = ((System.ComponentModel.DataAnnotations.DisplayAttribute)typeof(Enums.AppointmentStatus)
                                    .GetMember(appointmentStatus.ToString())[0]
                                    .GetCustomAttributes(typeof(System.ComponentModel.DataAnnotations.DisplayAttribute), false)[0])
                                    .Name;
                                <li><a class="dropdown-item">@optionName</a></li>
                                
                                }
                            </ul>
                        </div>
                    }
                    @if (User.IsInRole("receptionist"))
                    {
                        @switch (item.Status)
                        {
                            case Enums.AppointmentStatus.ArrivalPending:
                                <form asp-page-handler="updateStatus" method="post">
                                    <input type="hidden" name="id" value="@item.AppointmentId" />
                                    <input type="hidden" name="newStatus" value="@Enums.AppointmentStatus.Arrived" />
                                    <button type="submit" name="handler" class="w-50 btn btn-sm btn-outline-primary">Arrive Patient</button>
                                </form>
                                break;
                            case Enums.AppointmentStatus.Arrived:
                                <p>Patient has arrived</p>
                                <form asp-page-handler="updateStatus" method="post">
                                    <input type="hidden" name="id" value="@item.AppointmentId" />
                                    <input type="hidden" name="newStatus" value="@Enums.AppointmentStatus.ArrivalPending" />
                                    <button type="submit" name="handler" class="w-50 btn btn-sm btn-outline-primary">Undo</button>
                                </form>
                                break;
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>